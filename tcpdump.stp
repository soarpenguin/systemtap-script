#! /usr/bin/env stap

# A TCP dump like example
#   * urg - urgent
#   * ack - acknowledgement
#   * psh - push
#   * rst - reset
#   * syn - synchronize
#   * fin - finished 
# Usage:
#   sudo stap tcpdump.stp

probe begin, timer.s(1) {
    ansi_clear_screen()
    printf("-----------------------------------------------------------------\n")
    printf("       Source IP         Dest IP  SPort  DPort  U  A  P  R  S  F \n")
    printf("-----------------------------------------------------------------\n")
}

probe tcp.receive {
    printf(" %15s %15s  %5d  %5d  %d  %d  %d  %d  %d  %d\n",
        saddr, daddr, sport, dport, urg, ack, psh, rst, syn, fin)
}

